<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buscaminasbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuPrincipal" >

    <GridLayout
        android:id="@+id/Botonera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:columnCount="4" >

        <Button
            android:id="@+id/facil"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/medio"
            android:layout_alignParentLeft="true"
            android:onClick="NivelFacil"
            android:text="Facil"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/medio"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dificil"
            android:layout_alignBottom="@+id/dificil"
            android:layout_toRightOf="@+id/facil"
            android:onClick="NivelMedio"
            android:text="Medio"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/dificil"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="NivelDificil"
            android:text="Dificil"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/personalizado"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="NivelPersonalizado"
            android:text="Personalizado"
            android:textColor="#ffffff" />
    </GridLayout>

</RelativeLayout>